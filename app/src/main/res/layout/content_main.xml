<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="36dp"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/redA200"
        android:layout_weight="4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/city_view"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/common_signin_btn_dark_text_default"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/month_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/common_signin_btn_dark_text_default"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/year_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/common_signin_btn_dark_text_default"
                    android:textSize="24dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/temperature_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:gravity="center"
                android:textSize="48dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/wind_view"
                android:layout_width="match_parent"
                android:textColor="@color/common_signin_btn_dark_text_default"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/weather_img_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/regular_style_button"
            android:layout_width="0dp"
            android:text="Regular"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_margin="2dp"
            android:background="@color/redA200"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/official_style_button"
            android:layout_width="0dp"
            android:text="Official"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@color/redA200"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/evening_style_button"
            android:layout_width="0dp"
            android:text="Evening"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@color/redA200"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/sport_style_button"
            android:layout_width="0dp"
            android:text="Sport"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@color/redA200"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcView_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcView_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcView_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcView_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcView_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcView_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
